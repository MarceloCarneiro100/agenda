<%- include('includes/head') %>
    <%- include('includes/nav') %>
        <div class="container">
            <div class="row">
                <div class="col-lg-1"></div>

                <div class="col-lg-10 my-5">
                    <div class="text-center"><i class="bi bi-lock-fill"></i>
                        <h3 class="titulo">Login</h3>
                    </div>
                    <p class="text-center lead">Faça login ou crie sua conta abaixo</p>

                    <%- include('includes/messages'); %>
                    
                    <div class="row content my-3">
                        <div class="col-lg cadastro">
                            <h4>Faça o seu cadastro</h4>
                            <p>Se você ainda não tem conta, preencha o formulário abaixo:</p>
                            <form action="/login/register" method="POST" novalidate>
                                <input type="hidden" name="_csrf" value=<%=csrfToken %>>
                                <div class="form-group">
                                    <label class="form-label">Seu e-mail</label>
                                    <input type="email" class="form-control mb-2" name="email">
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Sua senha</label>
                                    <input type="password" class="form-control" name="password">
                                </div>
                                <button type="submit" class="btn btn-primary my-3">Criar minha conta</button>
                            </form>
                        </div>
                        <div class="col-lg login">
                            <h4>Faça seu login</h4>
                            <p>Se você já tem uma conta, faça seu login:</p>
                            <form action="/login/login" method="POST" novalidate>
                                <input type="hidden" name="_csrf" value=<%=csrfToken %>>
                                <div class="form-group">
                                    <label class="form-label">Seu e-mail</label>
                                    <input type="email" class="form-control mb-2" name="email">
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Sua senha</label>
                                    <input type="password" class="form-control" name="password">
                                </div>
                                <button type="submit" class="btn btn-primary my-3">Entrar</button>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col-lg-1"></div>
            </div>
        </div>
        <%- include('includes/footer') %>